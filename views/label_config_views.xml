<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Label Configuration Form View -->
    <record id="view_label_config_form" model="ir.ui.view">
        <field name="name">label.config.form</field>
        <field name="model">label.config</field>
        <field name="arch" type="xml">
            <form string="Label Quotation Configuration">
                <sheet>
                    <div class="oe_title">
                        <h1>Label Quotation Configuration</h1>
                    </div>
                    
                    <notebook>
                        <page string="Default Values">
                            <group>
                                <group>
                                    <field name="default_margin_percentage"/>
                                    <field name="default_quotation_validity_days"/>
                                    <field name="default_interspace"/>
                                </group>
                                <group>
                                    <field name="min_yield_percentage"/>
                                    <field name="max_web_width"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Email Settings">
                            <group>
                                <field name="quotation_email_template_id"/>
                            </group>
                        </page>
                        
                        <page string="PDF Settings">
                            <group>
                                <group>
                                    <field name="pdf_include_logo"/>
                                    <field name="pdf_logo" widget="image" invisible="not pdf_include_logo"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Approval Settings">
                            <group>
                                <group>
                                    <field name="require_approval"/>
                                    <field name="approval_threshold" invisible="not require_approval"/>
                                </group>
                                <group>
                                    <field name="approval_user_ids" widget="many2many_tags" invisible="not require_approval"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Label Configuration Action -->
    <record id="action_label_config" model="ir.actions.act_window">
        <field name="name">Configuration</field>
        <field name="res_model">label.config</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
        <field name="context">{'default_company_id': active_company}</field>
    </record>

    <!-- Configuration Menu - Temporarily disabled -->
    <!--
    <menuitem id="menu_label_config"
              name="Configuration"
              parent="menu_label_quotation_config"
              action="action_label_config"
              sequence="10"/>
    -->
</odoo>
