<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Fustella List View -->
    <record id="view_fustella_list" model="ir.ui.view">
        <field name="name">label.fustella.list</field>
        <field name="model">label.fustella</field>
        <field name="arch" type="xml">
            <list string="Die Cutting Tools">
                <field name="name"/>
                <field name="code"/>
                <field name="die_type"/>
                <field name="width"/>
                <field name="length"/>
                <field name="cost_per_use"/>
                <field name="supplier_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Fustella Form View -->
    <record id="view_fustella_form" model="ir.ui.view">
        <field name="name">label.fustella.form</field>
        <field name="model">label.fustella</field>
        <field name="arch" type="xml">
            <form string="Die Cutting Tool">
                <header>
                    <button name="toggle_active" type="object" string="Archive" class="btn-secondary" invisible="not active"/>
                    <button name="toggle_active" type="object" string="Unarchive" class="btn-secondary" invisible="active"/>
                </header>
                <sheet>
                    <!-- <div class="oe_button_box" name="button_box">
                        <button name="%(action_label_quotation)d" type="action" class="oe_stat_button" icon="fa-calculator">
                            <field name="id" widget="statinfo" string="Quotations"/>
                        </button>
                    </div> -->
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Die Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="die_type"/>
                            <field name="width"/>
                            <field name="length"/>
                            <field name="cost_per_use"/>
                            <field name="setup_time"/>
                        </group>
                        <group>
                            <field name="supplier_id"/>
                            <field name="supplier_code"/>
                            <field name="purchase_date"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes" placeholder="Additional notes about the die..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Fustella Search View -->
    <record id="view_fustella_search" model="ir.ui.view">
        <field name="name">label.fustella.search</field>
        <field name="model">label.fustella</field>
        <field name="arch" type="xml">
            <search string="Search Die Cutting Tools">
                <field name="name"/>
                <field name="code"/>
                <field name="die_type"/>
                <field name="supplier_id"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Die Type" name="group_die_type" context="{'group_by': 'die_type'}"/>
                    <filter string="Supplier" name="group_supplier" context="{'group_by': 'supplier_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Fustella Action -->
    <record id="action_fustella" model="ir.actions.act_window">
        <field name="name">Die Cutting Tools</field>
        <field name="res_model">label.fustella</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_fustella_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first die cutting tool!
            </p>
            <p>
                Define die cutting tools with their specifications, costs, and supplier information
                for use in label quotations.
            </p>
        </field>
    </record>

    <!-- Die Cutting Tools Menu - Temporarily disabled -->
