<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sale Order Form View Extension -->
    <record id="view_sale_order_form_label_quotation" model="ir.ui.view">
        <field name="name">sale.order.form.label.quotation</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_create_label_quotation" type="object" string="Create Label Quotation" class="btn-secondary" invisible="is_label_order"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="label_quotation_id" invisible="not is_label_order"/>
                <field name="is_label_order" invisible="1"/>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_label_quotations" type="object" class="oe_stat_button" icon="fa-calculator" invisible="label_quotation_count == 0">
                    <field name="label_quotation_count" widget="statinfo" string="Label Quotations"/>
                </button>
            </xpath>
        </field>
    </record>

    <!-- Sale Order Line List View Extension -->
    <record id="view_sale_order_line_list_label_quotation" model="ir.ui.view">
        <field name="name">sale.order.line.list.label.quotation</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_order_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="is_label_line" invisible="1"/>
                <field name="label_width" invisible="not is_label_line"/>
                <field name="label_height" invisible="not is_label_line"/>
                <field name="label_material" invisible="not is_label_line"/>
            </xpath>
        </field>
    </record>
</odoo>
