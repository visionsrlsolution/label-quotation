<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Label Quotation User Group -->
        <record id="group_label_quotation_user" model="res.groups">
            <field name="name">Label Quotation User</field>
            <field name="category_id" ref="base.module_category_manufacturing"/>
            <field name="comment">Can create and manage label quotations</field>
        </record>

        <!-- Label Quotation Manager Group -->
        <record id="group_label_quotation_manager" model="res.groups">
            <field name="name">Label Quotation Manager</field>
            <field name="category_id" ref="base.module_category_manufacturing"/>
            <field name="implied_ids" eval="[(4, ref('group_label_quotation_user'))]"/>
            <field name="comment">Full access to label quotation system</field>
        </record>

        <!-- Record Rules -->
        <record id="rule_label_quotation_user" model="ir.rule">
            <field name="name">Label Quotation: User Access</field>
            <field name="model_id" ref="model_label_quotation"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_label_quotation_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="rule_label_quotation_manager" model="ir.rule">
            <field name="name">Label Quotation: Manager Access</field>
            <field name="model_id" ref="model_label_quotation"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_label_quotation_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="rule_label_carta_user" model="ir.rule">
            <field name="name">Paper Material: User Access</field>
            <field name="model_id" ref="model_label_carta"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_label_quotation_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="rule_label_fustella_user" model="ir.rule">
            <field name="name">Die: User Access</field>
            <field name="model_id" ref="model_label_fustella"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_label_quotation_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="rule_label_macchina_user" model="ir.rule">
            <field name="name">Machine: User Access</field>
            <field name="model_id" ref="model_label_macchina"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_label_quotation_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>
